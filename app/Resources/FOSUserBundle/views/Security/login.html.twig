{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <div class="input-field col s12">
            <label class="label-login" for="username">User name</label>
            <input class="input-login" type="text" id="username" name="_username" value="{{ last_username }}"
                   required="required"/>
        </div>

        <div class="input-field col s12">
            <label class="label-login" for="password"> Password</label>
            <input class="label-login input-login" type="password" id="password" name="_password" required="required"/>
        </div>

        <div class="s12" id="remember_me">
            <label for="remember_me">Remember me</label>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        </div>

        <div align="center"><input class="btn-large" type="submit" id="_submit" name="_submit"
                                   value="Login"/></div>
    </form>
{% endblock fos_user_content %}